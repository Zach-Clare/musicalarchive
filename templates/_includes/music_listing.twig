<div class="post-list container">
    <div class="row g-2">
    {% for post in posts %}
        <div class="col-12 col-lg-6 col-xl-4 h-100 pt-2 pb-2">
            <a href="{{ post.url }}" class="d-flex justify-content-between align-items-center rounded-l-lg rounded-r-xl bg-light album-link">
            {% if post.photo|length %}
                {% set image = post.photo.one() %}
                <div class="col-3 p-0">
                    <img src="{{ image.getUrl({ width: 300, height: 300 }) }}"
                        alt="{{ image.title }}"
                        class="block"
                    />
                </div>
            {% endif %}
                <span class="title col-6 pl-4">{{ post.title|truncate(26) }} - {{ post.artists.one()}}</span>
                {% if post.title == post.artists.one().artist %}
                    {# Self-titled #}
                {% endif %}
                <span class="col-3 fa-stack fa-4x fa-xs pr-3">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-chevron-right fa-stack-1x"></i>
                </span>
            </a>
        </div>

    {% endfor %}
    </div>
</div>