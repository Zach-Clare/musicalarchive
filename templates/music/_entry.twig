{% extends "_layout.twig" %}

{% block content %}

<div class="row flex align-items-center justify-content-center">
    <div class="spacer m-5 d-md-none"></div>
    <div class="col-11 col-md-6 mt-4 text-center">
        <img src="{{ entry.photo.one().url }}">
    </div>
    <div class="col-12 col-md-6 mt-3 text-center">
        <h1 class="album-title text-black ">{{ entry.title }}</h1>
        <h2 class="artist-title font-italic mt-2 text-underline"><u>{{ entry.artist.one().artist }}</u>
            {# <span class="col-3 fa-stack fa-4x fa-2xs pr-3">
                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                <i class="fa fa-chevron-right fa-stack-1x"></i>
            </span> #}
        </h2>
    </div>
</div>
{% if entry.notes %}
<div class="container mt-5 bg-light rounded-xl">
    <div class="p-3">
        <h3 class="">Notes</h3>
        <p class="mt-3">{{ entry.notes }}</p>
    </div>
</div>
{% endif %}
{% if entry.tracklist %}
<div class="container mt-4 bg-light rounded-xl">
    <h3>Tracklist</h3>
</div>
{% endif %}
    

{% endblock %}